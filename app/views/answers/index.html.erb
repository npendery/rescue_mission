<h4>Answers</h4>

<% if @question.answers.present? %>
  <table>
    <thead>
      <tr>
        <th>Answer Description</th>
        <th>Best Answer</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @question.answers.order(best_answer: :desc).order(created_at: :desc).each_with_index do |answer, index| %>
        <tr>
          <td><%= "#{index + 1}.  " %><%= link_to(answer.description, :controller => 'answers', :action => 'show', :id => answer.id) %></td>
          <td>
            <% if answer.best_answer %>
              <%= "âœ“" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p> No answers yet </p>
<% end %>

